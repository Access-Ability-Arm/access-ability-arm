{
  "lsp": {
    "pyright": {
      "settings": {
        "python.pythonPath": "venv/bin/python",
        "python.venvPath": "."
      }
    }
  },
  "languages": {
    "Python": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "venv/bin/python",
          "arguments": ["-m", "black", "-"]
        }
      }
    }
  },
  "terminal": {
    "env": {
      "VIRTUAL_ENV": "$ZED_WORKTREE_ROOT/venv"
    },
    "shell": {
      "program": "/bin/zsh",
      "args": ["-l", "-c", "source venv/bin/activate && exec zsh"]
    }
  }
}
